        <Button
            android:id="@+id/btn_home_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_mv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_mv"
            android:background="@drawable/selector_home_me"
            android:paddingTop="85dp"
            android:text="@string/tianlaikge_gerenzhuye"
            android:textColor="@color/white"
            android:textSize="28sp" />
        
        

        <Button
            android:id="@+id/btn_movable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_home_me"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_home_me"
            android:background="@drawable/selector_movable"
            android:paddingTop="85dp"
            android:text="@string/tianlaikge_huodong"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_down"
            android:layout_width="233dip"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_yy"
            android:layout_below="@+id/btn_yy"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_down"
            android:paddingTop="85dp"
            
            android:text="@string/tianlaikge_mangguotv"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <!-- android:text="@string/tianlaikge_xiazaishoujiban" -->
        <Button
            android:id="@+id/btn_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_down"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_down"
            android:background="@drawable/selector_home_rank_mask"
            android:paddingTop="85dp"
            android:text="@string/tianlaikge_paihangbang"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_rank"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_rank"
            android:background="@drawable/selector_shopping"
            android:paddingTop="85dp"
            android:text="@string/tianlaikge_shangchang"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_shopping"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_shopping"
            android:background="@drawable/selector_settings"
            android:paddingTop="85dp"
            android:text="@string/tianlaikge_shezhi"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_manguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_settings"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_settings"
            android:background="@drawable/selector_manguo"
            android:paddingTop="85dp"
            android:text="@string/tianlaikge_guanji"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

</RelativeLayout>